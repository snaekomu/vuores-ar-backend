{
    "extends": "tslint:recommended",
    "rules": {
        "quotemark": [true, "single", "avoid-escape"],
        "curly": [true, "as-needed"],
        "semicolon": [true, "never"],
        "no-console": false,
        "only-arrow-functions": false,
        "arrow-parens": [true, "ban-single-arg-parens"],
        "space-before-function-paren": true
    }
}